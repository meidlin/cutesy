<script type="text/javascript">
var shownOne = $('#dogBreeds');
var showBreeds = function(petKind){
  var selectedKind = $('#'+petKind+'Breeds');
  shownOne.hide();
  selectedKind.show();
  shownOne = selectedKind;
};

// After loading the page
$(function(){
  // Hide the cat info
  $('#catBreeds').hide();
});

</script>

<%= form_for(@pet) do |f| %>
  <% if @pet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pet.errors.count, "error") %> prohibited this pet from being saved:</h2>

      <ul>
      <% @pet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <h2>Cat or Dog?</h2>
      <input type="radio" name="petKind" value="cat" onChange="showBreeds('cat')" class="btn btn-default col-md-6 col-sm-6"></input>
      <input type="radio" name="petKind" value="dog" onChange="showBreeds('dog')" class="btn btn-default col-md-6 col-sm-6"></input>

      <div class="field">
        <%= f.label :breed_id%><br>
        <!-- Select list cascading dropdown similar to age, look into nested  -->
        <div id="dogBreeds" class="breedDiv">
          <%= f.collection_select :breed_id, PetKind.where(name:"cat").first.breeds, :id, :name %>
        </div>
        <div id="catBreeds" class="breedDiv">
          <%= f.collection_select :breed_id, PetKind.where(name:"dog").first.breeds, :id, :name %>
        </div>
      </div>

      <div class="field">
        <%= f.label :age %><br>
        <!-- http://apidock.com/rails/ActionView/Helpers/FormTagHelper/number_field_tag -->
        <%= f.number_field :age %>
      </div>
      
      <div class="field">
        <%= f.label :sex %><br>
        <!-- http://guides.rubyonrails.org/form_helpers.html#making-select-boxes-with-ease (3.1) -->
        <%= f.number_field :sex %>
      </div>
      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_area :description %>
      </div>
        <%= f.label :avatar %><br>
        <%= f.file_field :avatar, :class => "image-choice-button" %>
      <div class="field" style="margin-top:20px">
      
      <div class="actions">

        <%= f.submit 'Create pet!', :class => 'btn btn-block btn-lg btn-primary' %>
      </div>

      <% if @edit %>
       <%= link_to "delete", pet_path(:pet_id => @pet.id), :method => :delete %>

      <% end %> 
<% end %>
