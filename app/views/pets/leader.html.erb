<body>
<div class="col-md-3 col-sm-3"></div>
    <div class="container col-md-6">
    <table class="table table-striped ">
    	<thead>
            <tr>
                <th>Rank</th>
                <th>Pet</th>
                <th>Name</th>
                <th>Owner</th>
                <th>Average Rating</th>
            </tr>
        </thead>
      <tbody>
        <%= @pets.each do |p| %>
            <tr>
                <td>#</td>
                <td><%= image_tag p.avatar.url(:medium), :style =>'width: 75px; height: 75px;' %></td>
                <td><%= p.name %> </td>
                <td>p.user_id<%= p.user_id %></td>
                <td>p.bAvgRating</td>
            </tr>
        <% end %>
      </tbody>
    </table>
    </div>
</div>
<div class="col-md-3 col-sm-3"></div>
</body>
</html>