<div ng-controller="feedController">
  <div ng-repeat="pet in pets"> 
    <div ng-if="pets_index == $index" class="container">
        <div class="row">
        	<div class="col-md-3 col-sm-3 col-xs-0"></div>
              <div class="thumbnail  col-md-6 col-sm-6" style="padding: 0">

                <!-- image -->

                <img src="{{pet.petavatar}}"> 


                  <!-- Name, age, breed -->
                        <div class="panel panel-default">
                            <div class="panel-body col-md-12" style="padding:0px;">
                              <div class="name col-md-12" style="">
                                <p style="padding-top:15px; margin:0px; font-size:36px; text-align:center; color:#4099ff;">{{pet.name}}</p>
                                  <a ng-href="/users/{{pet.user_id}}">{{pet.ownername}}
                                  <h1>{{test}}</h1>

                                  <a ng-href="/users/{{pet.user_id}}">{{pet.ownername}}

                                    <%#= link_to 'User Profile', user_path(current_user.id) %>
                                    
                                  </a>
                              </div>
                              <div class="name col-md-12" style="font-size:24px; text-align:center;">
                                <p>{{pet.age}}, {{pet.petgender}} {{pet.breedname}} </p>
                              </div>
                            </div> 
                        </div>
                <!-- Pet description -->
                <div class="panel panel-default">
                  <div class="panel-body">
                      <p style="">{{pet.description}}</p>
                  </div>
                </div>
                <!-- Ratings -->
                <div class="panel panel-default">
                  <div class="panel-body" style="padding-top:0px;">
                    <div class="name col-md-12" style="font-size:36px; text-align:center; color:#FFD700;">
                      <p style="margin:0">Rate me</p>

                      <input name="ratingsinput" id="input-id" type="number" class="rating" min=0 max=5 step=1 data-size="xs" data-show-clear="false" data-show-caption="false" >

                    </div>
                    <!-- Actual stars -->
                   <!--    <div style="width: 200px; margin: 0px auto; ">
                       <big> <span class="star">&#9734;<span class="star">&#9734;<span class="star">&#9734;<span class="star">&#9734;<span class="star">&#9734;</span></span></span></span></span></big>
                      </div>
                  </div>
                </div> -->
                <!-- Submit Button  -->
                <div class="panel panel-default" style="margin-bottom:0px">
                  <div class="panel-body" style="padding:0px;">
                    <!-- Skip Button -->
                    <button ng-click="next()" type="button" class="btn btn-danger btn-lg col-md-6 col-sm-6 col-xs-6" style="">Skip</button>
                    <!-- Rate button -->
                    <button ng-click="sendRating(); next() " type="button" class="btn btn-success btn-lg col-md-6 col-sm-6 col-xs-6" id="ratebutton">Rate!</button>
                  </div>
                </div>

              <div class="col-md-3 col-sm-3 col-xs-0"></div>
        </div>
    </div>
  </div>
</div>

